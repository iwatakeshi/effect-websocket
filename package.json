{
  "name": "effect-websocket",
  "version": "1.0.0",
  "description": "WebSocket library for Effect-TS with client and server support",
  "type": "module",
  "keywords": ["websocket", "effect", "effect-ts", "streaming", "real-time"],
  "author": "Takeshi Iwana",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "build": "tsc",
    "test:packages": "vitest --config vitest.packages.config.ts --run && bun test packages/bun/test",
    "test:bun": "bun test packages/bun/test",
    "build:packages": "tsc --build packages/*/tsconfig.json",
    "clean": "rm -rf packages/*/dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@effect/platform": "^0.91.1",
    "effect": "^3.17.14",
    "typescript": "^5"
  },
  "dependencies": {}
}
